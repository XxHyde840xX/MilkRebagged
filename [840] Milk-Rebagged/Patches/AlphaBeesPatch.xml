<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Alpha Bees</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>/Defs/ThingDef[defName = "RB_BeeMilk"]/graphicData</xpath>
                    <value>
                        <graphicData>
                            <texPath>Things/Items/Resources/AB_BeeMilk</texPath>
                            <graphicClass>Graphic_StackCount</graphicClass>
                        </graphicData>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>
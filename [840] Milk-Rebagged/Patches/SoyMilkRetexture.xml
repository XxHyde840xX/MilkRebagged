<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>VFME - Simple Tofu!</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="SoyMilk"]/graphicData/graphicClass</xpath>
                    <value>
                        <graphicClass>Graphic_StackCount</graphicClass>
                    </value>
                </li>        
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="SoyMilk"]/graphicData/texPath</xpath>
                    <value>
                        <texPath>Retextures/SoyMilk</texPath>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>